variable "cluster_name" {
  description = "The name of the MongoDB Atlas cluster"
  type        = string
  default     = "my-global-cluster"
}

variable "instance_size" {
  description = "The size of the MongoDB Atlas cluster instance"
  type        = string
  default     = "M10"
}

variable "deploy_free_cluster" {
  type    = bool
  default = false
}

variable "mongo_db_major_version" {
  description = "The major version of MongoDB to use"
  type        = string
  default     = "8.0"
}

variable "db_admin_name" {
  description = "The username for the MongoDB Atlas database admin"
  type        = string
  default     = "db_cluster_admin"
}

variable "db_password" {
  description = "The password for the MongoDB Atlas database admin"
  type        = string
  default     = "SuperSecurePassword123!"
  sensitive   = true
}